---
import Image from 'astro/components/Image.astro';
import type { ImageMetadata } from 'astro';

interface Props {
  image: ImageMetadata;
  title: string;
  alt: string;
}

const { image, title, alt } = Astro.props;
---

<div class="relative w-60 sm:w-72 h-80 sm:h-96 cursor-pointer group flex-shrink-0">
  <Image 
    src={image} 
    alt={alt} 
    class="absolute inset-0 w-full h-full bg-claro rounded-[7px] object-cover"
  />
  <div class="absolute inset-0 bg-oscuro/70 opacity-0 group-hover:opacity-100 sm:group-hover:opacity-100 transition-opacity duration-300 rounded-[7px] flex items-center justify-center">
    <h3 class="text-texto text-2xl font-bold text-center px-4">{title}</h3>
  </div>
</div>