---
import type { ImageMetadata } from 'astro';
import Image from 'astro/components/Image.astro';

interface Props {
  image: ImageMetadata;
  title: string;
  alt: string;
}

const { image, title, alt } = Astro.props;
---

<div class="relative h-64 sm:h-96 rounded-[7px] overflow-hidden group cursor-pointer">
  <Image 
    src={image} 
    alt={alt} 
    class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
  />
  <div class="absolute inset-0 bg-gradient-to-t from-oscuro/90 to-transparent">
    <h3 class="text-texto text-4xl absolute bottom-16 left-16 w-1/2">{title}</h3>
  </div>
</div>